# Django Environment Configuration
# Copy this file to .env and update with your actual values

# Application Mode: dev, test, or prod
MODE=dev

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Security
# IMPORTANT: Generate a new secret key for production!
# You can generate one with: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY=django-insecure-7x@k9$$w%m2p+5q8r!t&v^y*z(a)b=c_d-e.f/g:h;i<j>k

# Debug Mode (true/false, 1/0, yes/no)
# Will be automatically set based on MODE if not specified
# DEBUG=true

# Timezone
UTC_OFFSET=-6

# Database Configuration (Microsoft SQL Server)
# Leave empty to use SQLite for local development
DB_HOST=mssql
DB_PORT=1433
DB_NAME=uswds_db
DB_USER=SA
DB_PASS=YourStrong@Password123

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# Logging Configuration, FORMATTER can be "simple" or "json"
LOG_LEVEL=DEBUG
LOG_FORMATTER=simple
LOG_FILE_SIZE=3000000  # Size in bytes (3000000 = ~3MB, 10485760 = 10MB)
LOG_FILE_ROTATION=5
LOG_FILE_PATH=./.logs/django

# LDAP Configuration (Optional)
LDAP_SERVER_URI=ldap://ldap.example.com:389
LDAP_AUTH_BIND_DN=cn=admin,dc=example,dc=com
LDAP_AUTH_BIND_PASS=ldap_admin_password
LDAP_SEARCH_OU=ou=users,dc=example,dc=com

# Allowed Hosts (comma-separated list)
ALLOWED_HOSTS=localhost,0.0.0.0,127.0.0.1,django
